@model IEnumerable<Essentialex.Models.Law>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row center">
    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1"><div id="pagination"></div></div>
</div>

@foreach (var item in Model)
            {
    <div class="panel panel-default panelList">
        <div class="panel-body">


            <div class="row">
                <div class="col-lg-12">
                    <label>Ley: </label>
                    @Html.DisplayFor(modelItem => item.LawName)
                </div>

                <div class="col-lg-12">
                    @Html.DisplayFor(modelItem => item.Kind)
                </div>

                <div class="col-lg-12">
                    @Html.DisplayFor(modelItem => item.Created)
                </div>

                <div class="col-lg-12">
                    @Html.DisplayFor(modelItem => item.DigitalVersionDate)
                </div>

                <div class="col-lg-12">
                    @Html.DisplayFor(modelItem => item.LawDate)
                </div>

                <div class="col-lg-12">
                    @Html.DisplayFor(modelItem => item.Publication)
                </div>

                <div class="col-lg-12">
                    @Html.DisplayFor(modelItem => item.Valid)
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3 pull-right">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>

        </div>
    </div>
}

<script type="text/javascript">

    window.onload = function () {
        $(document).ready(function () {
            $(pagination).pagination({
                items: 100,
                itemsOnPage: 5,
                displayedPages: 3,
                cssStyle: 'dark-theme',
                prevText: 'Ant',
                nextText: 'Post'
            });
        });
    };

</script>
